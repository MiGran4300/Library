@using static Library.Models.Book
@model Library.Models.Book

@{
    ViewData["Title"] = "Create";
}

<h4>Сподели творба</h4>

<div class="row">
    <div class="col-md-10">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Ratings" value="0">
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AuthorID" class="control-label"></label>
                <select asp-for="AuthorID" class ="form-control" asp-items="ViewBag.AuthorID" ></select>
            </div>
            <div class="form-group">
                <label asp-for="Ganre" class="control-label"></label>
               <select asp-for="Ganre" class="form-control" >
                   <option></option>
                   <option>Фантастика</option>
                   <option>Фентъзи</option>
                   <option>Исторически</option>
                   <option>Трилър</option>
                   <option>Поезия</option>
                   <option>Детска литература</option>
               </select>

                <span asp-validation-for="Ganre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Snippet" class="control-label">Кратък откъс:</label>
                <textarea asp-for="Snippet"  class="" ></textarea>
                <span asp-validation-for="Snippet" class="text-danger"></span>
            </div>
                          
            <div class="form-group">
                <label asp-for="File" class="control-label" ></label>
                <input asp-for="File" accept="upload/*"  />
                <span asp-validation-for="File" class="text-danger"></span>
            </div>

            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
