@using Library.ViewModel
@model PaginatedList<Library.Models.Book>
@{
    ViewData["Title"] = "Index";
}

<h1>Произведения</h1>

<p>
    <a asp-action="Create">Качи произведение</a>
</p>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Търси по Автор: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            
            <a asp-action="Index">Върни се към пълния списък</a>
        </p>
    </div>
</form>
<table class="table table-hover">
    <thead class="table-dark">
        <tr>
            <th>
              <a id="intext" asp-action="Index" asp-route-sortOrder="@ViewData["TitleSortParm"]"
                asp-route-currentFilter="@ViewData["CurrentFilter"]" > Заглавие</a>
            </th>
            <th>
             Автор
            </th>
            
            <th>
                Жанр 
            </th>
            <th>
                <a id="intext" asp-action="Index" asp-route-sortOrder="@ViewData["ReleaseDateSortParm"]"
                asp-route-currentFilter="@ViewData["CurrentFilter"]" > Дата на публикуване </a>
            </th>
            <th>
                Файл
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Authors.FullName)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Ganre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                <a asp-action="Download" asp-route-filename="@item.FilePath">
                @Html.DisplayFor(modelItem => item.FilePath)
                </a>
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.BookID" >Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BookID" >Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BookID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex - 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @prevDisabled">
    Назад
</a>
<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex + 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @nextDisabled">
    Напред
</a>
