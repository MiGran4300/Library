@using Library.Areas.Identity.Data
@using Microsoft.AspNetCore.Identity
@inject SignInManager<LibraryUser> signInManager;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Library</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Library.styles.css" asp-append-version="true" />
    <!-- font awesome -->
   <script src="https://kit.fontawesome.com/0ecaefd5d9.js" crossorigin="anonymous"></script>
   <script src='https://cdn.tiny.cloud/1/59ltx183bco137dr46h1yfjjohnslab1c3n7v3i3sxqimwar/tinymce/5/tinymce.min.js' referrerpolicy="origin">
  </script>
  <script>
    tinymce.init({
      selector: 'textarea'
    });
  </script>
  
</head>
<body>
    <header >
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom box-shadow mb-0">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img style="" src="/images/logo-horizontal.jpg" />
                </a>
             <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
             data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" 
             aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>             
    <div class = "collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a style="font-size:1.5rem;" class="nav-link text-white me-3" asp-area="" asp-controller="Home" asp-action="Index">Начало</a>
                        </li>
                        
                        <li class="nav-item">
                            <a style="font-size:1.5rem;" class="nav-link text-white me-3" asp-area="" asp-controller="Books" asp-action="Index">Творби</a>
                        </li>
                        <li class="nav-item">
                            <a style="font-size:1.5rem;" class="nav-link text-white me-4" asp-area="" asp-controller="Authors" asp-action="Index">Автори</a>
                        </li>
                        <li class="nav-item">
                            <a  style="font-size:1.5rem;" class="nav-link text-white me-3" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        
                        
       @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                        {

                            <li class="nav-item dropdown">
                                <button style="font-size:1.5rem;" type="button" class="btn btn-danger dropdown-toggle" data-bs-toggle="dropdown">
                                    Manage
                                </button>

                                <ul class="dropdown-menu" >
                                    <li> <a class="dropdown-item" asp-controller="Administration"
               asp-action="ListUsers">Users</a></li>
                                    <li> <a class="dropdown-item" asp-controller="Administration"
               asp-action="ListRoles">Roles</a></li>
                                    <li> <a class="dropdown-item" asp-controller="Admin"
               asp-action="Index">Uploaded Books</a></li>

                                </ul>
                            </li>
                        }

                    </ul>
                   
                </div>
            </div>
        </nav>
    </header>
    
        
            @RenderBody()
        
    

    <footer style="padding:20px"  class="border-top footer text-center text-white bg-dark  box-shadow">
        <div class="container">
            &copy; 2022 - The Library - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
     <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
